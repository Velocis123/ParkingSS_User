<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Register"
    android:background="@color/colorPrimary"



    >



    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="@dimen/_275sdp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_20sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:elevation="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/len2"
                    android:layout_width="match_parent"
                    android:weightSum="4"
                    android:layout_height="@dimen/_30sdp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_mobile"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:srcCompat="@drawable/phone_black_24dp"/>


                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/avenirltstd_light"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_2sdp"
                        android:text="8750921779"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/change"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/avenirltstd_light"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_20sdp"
                        android:text="Change"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="#000000"/>




                <LinearLayout
                    android:id="@+id/len3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@null"
                        android:drawableStart="@drawable/name_24dp"
                        android:drawablePadding="10dip"
                        android:fontFamily="@font/avenirltstd_light"
                        android:hint="Enter Your Full Name"
                        android:padding="@dimen/_5sdp"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="#000000"/>

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@null"
                        android:drawableStart="@drawable/otp_24dp"
                        android:drawablePadding="10dip"
                        android:fontFamily="@font/avenirltstd_light"
                        android:hint="Enter Password "
                        android:padding="@dimen/_5sdp"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="#000000"/>

                    <EditText
                        android:id="@+id/otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@null"
                        android:drawableStart="@drawable/otp_24dp"
                        android:drawablePadding="10dip"
                        android:fontFamily="@font/avenirltstd_light"
                        android:hint="Enter OTP "
                        android:padding="@dimen/_5sdp"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="@dimen/_12sdp" />




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="#000000"/>


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_35sdp"
    android:padding="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_25sdp"
    android:elevation="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_10sdp"

    >




                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Register"
                        android:textAllCaps="false"

                        android:textStyle="bold"
                        android:id="@+id/btn_register"

                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_18sdp"
                        android:fontFamily="@font/avenirltstd_light"
                        android:background="@color/colorPrimary"/>

</androidx.cardview.widget.CardView>
                </LinearLayout>




            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>